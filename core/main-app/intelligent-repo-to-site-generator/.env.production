# Production Environment Configuration - 4site.pro
# DO NOT COMMIT TO VERSION CONTROL - Use secrets management

# Application Environment
NODE_ENV=production
API_PORT=3001
BASE_URL=https://4site.pro

# Security Configuration
JWT_SECRET=your-256-bit-secret-key-replace-in-production
VALID_API_KEYS=api_key_1,api_key_2,api_key_3
BLOCKED_IPS=

# Database Configuration (Supabase)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Services
VITE_GEMINI_API_KEY=your-gemini-api-key
VITE_FAL_API_KEY=your-fal-api-key

# OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your-bot-username
TELEGRAM_WEBHOOK_URL=https://4site.pro/api/social/telegram-webhook

# Payment Processing (Polar.sh)
VITE_POLAR_ACCESS_TOKEN=your-polar-access-token
VITE_POLAR_ORG_ID=4site-pro
VITE_POLAR_WEBHOOK_SECRET=your-polar-webhook-secret

# External API Configuration
AEGNTIC_API_URL=https://api.aegntic.com
AEGNTIC_API_KEY=your-aegntic-api-key

# Feature Flags
ENABLE_VIRAL_SCORING=true
ENABLE_AUTO_FEATURING=true
ENABLE_COMMISSION_SYSTEM=true
ENABLE_PRO_SHOWCASE=true
ENABLE_SHARE_TRACKING=true
ENABLE_POLAR_INTEGRATION=true

# Commission System
COMMISSION_PAYOUT_THRESHOLD=100.00
COMMISSION_PAYOUT_SCHEDULE=monthly

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
GOOGLE_ANALYTICS_ID=your-ga-id

# CDN & Storage
CDN_URL=https://cdn.4site.pro
S3_BUCKET=4site-pro-assets
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STRICT_MAX=10